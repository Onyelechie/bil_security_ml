# Database Configuration
DATABASE_URL=sqlite:///./server.db

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=false

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
SECRET_KEY=your-secret-key-here

# ==========================
# Edge Agent (Area B)
# ==========================
SITE_ID=site_demo
TCP_HOST=172.22.0.5
TCP_PORT=8127

#Edge Agent will POST alerts + heartbeats and GET updates from this server.
SERVER_BASE_URL=http://127.0.0.1:8000   

#How often (seconds) Edge Agent sends a heartbeat to HQ.
HEARTBEAT_INTERVAL_SEC=60       

#every 300 seconds (5 minutes), check updates.
UPDATE_INTERVAL_SEC=300                 

# INFO: normal operation (startup, heartbeat sent, motion received)
# DEBUG: very detailed internal steps (use for troubleshooting)
# WARNING: unexpected but recoverable (retrying, queue near full, temporary disconnect)
# ERROR: operation failed (couldn’t parse event, couldn’t send alert, disk write failed)
# CRITICAL: service cannot continue (fatal config, no disk space, unrecoverable failure)
LOG_LEVEL=INFO      

# ==========================
# Edge Agent HTTP API (Area B)
# ==========================
EDGE_HTTP_HOST=127.0.0.1
EDGE_HTTP_PORT=8128
EDGE_PC_ID=edge_demo
SITE_NAME=Demo Site